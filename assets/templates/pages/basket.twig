	<!-- begin content-group -->
	<section class="content-group">
		<div class="uk-container">
			<div class="content-group__inner">
				<div class="content-group__header">
					<h2>
						С этим часто заказывают</h2>
				</div>
				<div class="content-group__body">
					<div class="products-slider">
						<div class="slider">
							<div class="slide">
