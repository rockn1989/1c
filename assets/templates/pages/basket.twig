{% block content %}


	<!-- begin basket-section -->
	<section class="basket-section">
		<div class="uk-container">
			<h1>Корзина</h1>


			<div class="basket-form">
				<form action="">
					<div class="order-list">
						<div class="order-item">
							<div class="order-item__info">
								<a href="">1С:Управление торговлей 8</a>
