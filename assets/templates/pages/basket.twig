						<div class="order-item">
							<div class="order-item__info">
								<a href="">1С:Управление торговлей 8</a>
							</div>
							<div class="order-item__action">
								{% include "../includes/components/calc.twig" %}
								<div class="order-item__amount">26 600 р.</div>
							</div>
							<a href="#" class="button-close js__delete-order-item" role="button" uk-close></a>
						</div>

						<div class="order-item">
							<div class="order-item__info">
								<a href="">1С:Бюджет поселения 8</a>
							</div>
							<div class="order-item__action">
								{% include "../includes/components/calc.twig" %}
								<div class="order-item__amount">40 800 р.</div>
